<Application x:Class="Portfolio.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Portfolio"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Color x:Key="ColorBackground">#232221</Color>
        <SolidColorBrush x:Key="BrushBackground" Color="{StaticResource ColorBackground}"/>

        <Color x:Key="ColorForeground">#DEDEDE</Color>
        <SolidColorBrush x:Key="BrushForeground" Color="{StaticResource ColorForeground}"/>

    </Application.Resources>
</Application>
